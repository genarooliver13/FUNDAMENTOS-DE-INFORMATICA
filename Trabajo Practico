      "cell_type": "code",
      "source": [
        "# C√°lculo de materiales para un puente\n",
        "\n",
        "# Solicitud de datos\n",
        "largo_puente = float(input(\"Ingres√° el largo del puente (m): \"))\n",
        "ancho_puente = float(input(\"Ingres√° el ancho del puente (m): \"))\n",
        "espesor_losa = float(input(\"Ingres√° el espesor de la losa (m): \"))\n",
        "base_pilar = float(input(\"Ingres√° la base del pilar (m): \"))\n",
        "alto_pilar = float(input(\"Ingres√° la altura del pilar (m): \"))\n",
        "cant_pilares = int(input(\"Ingres√° la cantidad de pilares: \"))\n",
        "\n",
        "# C√°lculo de vol√∫menes\n",
        "volumen_losa = largo_puente * ancho_puente * espesor_losa\n",
        "volumen_pilares = cant_pilares * base_pilar * base_pilar * alto_pilar\n",
        "volumen_total = volumen_losa + volumen_pilares\n",
        "\n",
        "# C√°lculo de acero (150 kg por m¬≥ de hormig√≥n)\n",
        "acero_total = volumen_total * 150  # en kg\n",
        "\n",
        "# Costos\n",
        "costo_hormigon_m3 = 85000  # $/m¬≥\n",
        "costo_acero_kg = 1.200    # $/kg\n",
        "\n",
        "# C√°lculo de costos\n",
        "costo_total_hormigon = volumen_total * costo_hormigon_m3\n",
        "costo_total_acero = acero_total * costo_acero_kg\n",
        "costo_total = costo_total_hormigon + costo_total_acero\n",
        "\n",
        "# Resultados\n",
        "print(\"\\n=== RESULTADOS ===\")\n",
        "print(f\"Volumen total de hormig√≥n: {volumen_total:.2f} m¬≥\")\n",
        "print(f\"Cantidad total de acero: {acero_total:.2f} kg\")\n",
        "print(f\"Costo estimado de hormig√≥n: ${costo_total_hormigon:,.2f}\")\n",
        "print(f\"Costo estimado de acero: ${costo_total_acero:,.2f}\")\n",
        "print(f\"üí∞ Costo total estimado: ${costo_total:,.2f}\")\n",
        "\n"
      ],
